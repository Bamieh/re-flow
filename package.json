  "bin": {
    "reflow": "bin/_reflow.js",
    "re-flow": "bin/_reflow.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bamieh/re-flow"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-inject": "^0.0.4",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-plugin-rewire": "^1.1.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.24.1",
    "chai": "^3.5.0",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "^0.7.1",
    "coveralls": "^2.13.1",
    "cross-env": "^4.0.0",
    "glob": "^7.1.2",
    "mkdirp": "^0.5.1",
    "mocha": "^4.0.1",
    "nyc": "^10.2.0",
    "rimraf": "^2.6.1"
  },
  "peerDependencies": {
    "mocha": "^4"
  },
  "dependencies": {
    "intercept-stdout": "^0.1.2",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.4",
    "resolve": "^1.4.0",
    "threads": "^0.8.1"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test REFLOW_ENV=DEV mocha",
    "test:watch": "npm run test -- --reporter min --watch",
    "test:cover": "cross-env NODE_ENV=test nyc npm run test",
    "clean": "babel-node tools/run clean",
    "build:babel": "cross-env NODE_ENV=production babel lib --out-dir distribution --compact=true --no-comments",
    "build": "cross-env NODE_ENV=production babel-node tools/run build",
    "prepublish": "npm run build",
    "coverage:html": "npm run test:cover && nyc report --reporter=html",
    "coverage:lcov": "npm run test:cover && nyc report --reporter=lcov",
    "coverage": "npm run coverage:html && open coverage/index.html",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "codecov": "codecov"
  }
}
