{
  "compilerOptions": {
    "strictNullChecks": true,
    "declaration": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "outDir": "./lib",
    "typeRoots" : ["node_modules/@types", "typings"],
    "lib": [
      "es6",
      "es2017.object"
    ],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["typings/*", "src/*"]
}
